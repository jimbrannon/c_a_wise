									}
								}
								if (!$foundit) {
									$new_permissions['view_own'][$counter] = $rid;
								}
							} else {
								/*
								 * use existing
								 */
								$new_permissions['view_own'] = $permissions['view_own'];
							}
							/*
							 * the update access settings
