									$new_permissions['update_own'][$counter] = $role_id;
									$counter++;
									if ($role_id == $rid) {
										$foundit = TRUE;
									}
								}
								if (!$foundit) {
									$new_permissions['update_own'][$counter] = $rid;
								}
							} else {
								/*
								 * use existing
								 */
								$new_permissions['update_own'] = $permissions['update_own'];
							}
							/*
